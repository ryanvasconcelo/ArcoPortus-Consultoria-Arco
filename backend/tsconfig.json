{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext", /* Mude aqui */
    "moduleResolution": "NodeNext", /* E aqui */
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "src/types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts", // Inclui todos os arquivos .ts dentro da pasta src
    "src/@types/**/*.d.ts" // Inclui explicitamente nossos arquivos de definição
  ]
}