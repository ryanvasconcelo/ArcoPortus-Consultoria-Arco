// Define o gerador de cliente do Prisma (para TypeScript)
generator client {
  provider = "prisma-client-js"
}

// Define a fonte de dados (nosso banco Postgres)
// A URL é lida do arquivo .env que acabamos de configurar
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define nosso primeiro modelo de dados: a tabela de Usuários
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  company   String   // Trocamos 'name' por 'company' e tornamos obrigatório
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}